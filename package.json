{
  "name": "qwerty",
  "version": "1.0.0",
  "description": "A light weight, customizable, screenwritting tool.",
  "homepage": "www.theqwertyapp.com",
  "main": "main.js",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build:linux": "electron-builder --linux --publish never",
    "build:mac": "electron-builder --mac --publish never",
    "build:win": "electron-builder --win --publish never",
    "deploy": "electron-builder build --mac --win --publish always"
  },
  "author": "R2rog <sirR2rog@gmail.com>",
  "dependencies": {
    "electron-store": "^7.0.3",
    "electron-updater": "^4.3.9",
    "jquery": "^3.6.0"
  },
  "devDependencies": {
    "electron": "^11.4.8",
    "electron-builder": "^22.10.5",
    "electron-notarize": "^1.0.0"
  },
  "build": {
    "appId": "com.qwerty.app",
    "productName": "qwerty",
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Productivity",
      "icon": "./build/build/feather_ico.ico"
    },
    "mac": {
      "category": "Productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": "dmg",
      "extraDistFiles": "data",
      "icon": "./build/icon.icns",
      "type": "distribution"
    },
    "win": {
      "target": "NSIS",
      "icon": "build/feather_ico.ico"
    }
  }
}
